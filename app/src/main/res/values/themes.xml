<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AZAudioPlayer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/onPrimary</item>
        <item name="android:navigationBarColor">@color/onPrimary</item>
        <item name="bottomSheetDialogTheme">@style/MyBottomSheetDialogTheme</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/onPrimary</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.AZAudioPlayer">
        <item name="android:navigationBarColor">@color/onPrimary</item>
        <item name="android:backgroundTint">@color/onPrimary</item>
    </style>
</resources>